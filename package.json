{
  "name": "@bigfootds/sourcepool",
  "productName": "Sourcepool",
  "version": "1.0.0",
  "description": "A self-hosted content manager for TTRPG games.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:windows": "electron-forge make --target @rabbitholesyndrome/electron-forge-maker-portable",
    "make:ubuntu": "electron-forge make --target @electron-forge/maker-deb",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "dev:licenseDataGen": "mkdir -p ./out && npx @bigfootds/npm-compliance-helper > ./src/shared/data/compliance.json",
    "build:docs": "jsdoc ./src -r -c ./jsdoc.json"
  },
  "devDependencies": {
    "@bigfootds/npm-compliance-helper": "^1.0.0",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/plugin-webpack": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@rabbitholesyndrome/electron-forge-maker-portable": "^0.2.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "clean-jsdoc-theme": "^4.3.0",
    "css-loader": "^6.11.0",
    "electron": "32.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "jsdoc": "^4.0.3",
    "node-loader": "^2.0.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4"
  },
  "keywords": [],
  "author": {
    "name": "BigfootDS",
    "email": "contact@bigfootds.com"
  },
  "license": "MIT",
  "dependencies": {
    "@homebridge/ciao": "^1.3.1",
    "bcrypt": "^5.1.1",
    "bonjour-service": "^1.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "explorer-opener": "^1.0.1",
    "i18next": "^23.14.0",
    "inflection": "^3.0.0",
    "iso-639-1": "^3.1.2",
    "on-change": "^5.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.0.1",
    "react-pure-modal": "^2.2.6",
    "react-router-dom": "^6.26.1",
    "react-syntax-highlighter": "^15.5.0",
    "react-toastify": "^10.0.5",
    "react-use": "^17.5.1",
    "react-use-websocket": "^4.8.1",
    "ws": "^8.18.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
